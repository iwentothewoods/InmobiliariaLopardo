@model inmobiliariaLopardo.Models.Contrato
@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere borrar esto?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Inquilino.Nombre @ViewBag.Inquilino.Apellido
        </dd>
        <dt class="col-sm-2">
            Inmueble
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Inmueble.Direccion
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>

    <form asp-action="Eliminar">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Eliminar" class="btn btn-primary" /> <a asp-action="Index"
            class="btn btn-volver">Cancelar</a>
    </form>
</div>
