@model inmobiliariaLopardo.Models.Usuario

<h2>Cambiar Avatar</h2>

<form asp-action="CambiarAvatar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="AvatarFile" class="control-label">Nuevo Avatar</label>
        <input asp-for="AvatarFile" type="file" class="form-control-file" />
        <span asp-validation-for="AvatarFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar Avatar" class="btn btn-primary" />
    </div>
</form>
