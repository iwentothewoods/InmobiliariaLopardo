@model inmobiliariaLopardo.Models.Usuario
@{
    ViewData["Title"] = "Cambiar Clave";
}

<h1>Cambiar Clave</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CambiarClave" method="post">
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
                <label asp-for="Clave" class="control-label">Nueva Clave</label>
                <input asp-for="Clave" type="password" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConfirmarClave" class="control-label">Confirmar Clave</label>
                <input id="ConfirmarClave" type="password" class="form-control" />
                <span id="validationConfirmarClave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar Clave" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var confirmarClave = document.getElementById("ConfirmarClave");
        var validationConfirmarClave = document.getElementById("validationConfirmarClave");

        confirmarClave.addEventListener("input", function () {
            var clave = document.getElementById("Clave").value;
            var confirmacion = confirmarClave.value;

            if (clave !== confirmacion) {
                validationConfirmarClave.textContent = "Las claves no coinciden.";
            } else {
                validationConfirmarClave.textContent = "";
            }
        });
    });
</script>
